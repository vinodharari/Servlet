<web-app>
		<context-param>
			<param-name>name</param-name>
			<param-value>jain</param-value>
		</context-param>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.vinod.LoginServlet</servlet-class>
		
		<init-param>
			<param-name>pi</param-name>
			<param-value>3.142</param-value>
		</init-param>
		<init-param>
			<param-name>country</param-name>
			<param-value>India</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/Login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>RegistrationServlet</servlet-name>
		<servlet-class>com.vinod.RegistrationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegistrationServlet</servlet-name>
		<url-pattern>/Registration</url-pattern>
	</servlet-mapping>
</web-app>